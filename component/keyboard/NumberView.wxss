.input-widget {
    border: 1px solid #cccccc;
    height: 100rpx;
    line-height: 100rpx;
    display: -webkit-box;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    text-align: center;
    justify-content: center;
    background: #fff;
}

.mode-switcher {
    border-right: 1px solid #cccccc;
    -webkit-box-flex: 0.10;
    -webkit-flex: 0 1 10%;
    flex: 0 1 10%;
    text-align: center;
    background-position: center;
	background-repeat: no-repeat;
    background-size: 8.5vh;
}

@media all and (min-width:640px){ .mode-switcher { background-size: 9vh; } }
@media all and (max-width:480px){ .mode-switcher { background-size: 7vw; } }

.inputrow {
    -webkit-box-flex: 0.90;
    -webkit-flex: 0 1 90%;
    flex: 0 1 90%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    list-style: none;
    padding: 0;
    margin: 0;
    height: 100%;
}

.inputrow > view{
    height: 100%;
}

.inputrow > view.lengthof-8 {
    -webkit-box-flex: 0.125;
    -webkit-flex: 0 1 12.5%;
    flex: 0 1 12.5%;
}

.inputrow > view.lengthof-7 {
    -webkit-box-flex: 0.1428;
    -webkit-flex: 0 1 14.28%;
    flex: 0 1 14.28%;
}

.button {
     font-size: 5vh; 
     border: none; 
     border-radius: 0;
     line-height:100rpx;
}
.button::after{
      border: none; 
     border-radius: 0;
}
.key{
    border: none; 
    border-radius: 0;
}
/*Landscape*/
@media all and (min-width:640px){
  .button { font-size: 9vh; }
}

/*Portrait*/
@media all and (max-width:480px) {
  .button { 
      font-size: 7vw;
   }
}

.inputrow > view:not(:last-child) {
    border-right: 1px solid #cccccc;
}

.inputrow > view::selection {
    border: 1px solid #29a0dc;
}

/*Mode 5 新能源键盘图标启用状态 */
.modeof-5 , .modeof-0 {
    background-image: url("data:image/svg+xml;base64,");
}

/*Mode 0 新能源键盘图标禁用状态 */
.modeof-0 {
    -webkit-filter: grayscale(100%);
    filter: grayscale(100%);
    filter: gray;
}