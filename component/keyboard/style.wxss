button { 
    -webkit-box-sizing: content-box; 
    box-sizing: content-box; 
    background: none;
    border: 0;
    /*line-height: normal;*/
    overflow: visible;
    padding: 0;
    -webkit-appearance: none;
    -webkit-user-select: none;
    user-select: none;
}

/*键盘容器*/
.single-keyboard-box, mixed-keyboard-box{
    /*通过Border来设置外边距。颜色与背景色相同*/
    border: 5px solid #eef0f4;
    background: #eef0f4;
    box-sizing: border-box;
}

.r-border {
    border-radius: 4px;
    /*低版本Android WebView兼容性处理*/
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
    background-color: #FFFFFF;
    box-sizing: border-box;
}

.keyboard-pad{
    height: 100%;
}

/*按键提示*/
.keytip{
    position: absolute;
    background: white;
    margin: 0 auto;
    width: 50px;
    height: 60px;
    line-height: 60px;
    color: #418af9;
    font-size: 28px;  
    text-align: center;
    vertical-align: middle;
    border-radius: 10px;
    border: 1px solid #cccccc; 
    box-shadow: 0 1px 2px #DDDDDD;
}

/*统一按钮样式*/
button.key {
    color: black;
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100% !important;
    text-align: center;
    vertical-align: middle;
    overflow: hidden;
    outline: none;
}

button.txt-key {
    border: 0;
    box-shadow: 0 1px 2px #DDDDDD;
}

button.disabled, button.key:disabled {
    color: #DDDDDD;
}

button.key:active:not(:disabled) {
    background-color: #b9c2cf;
    color: #ffffff;
}

@media all and (min-width:720px){ button.key { font-size: 6.5vw; } }
@media all and (min-width:640px){ button.key { font-size: 5.5vw; } }
@media all and (max-width:480px){ button.key { font-size: 4.5vw; } }
@media all and (max-width:360px){ button.key { font-size: 4vw; } }
