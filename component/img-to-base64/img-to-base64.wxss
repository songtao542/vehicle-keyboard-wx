/* component/ocr.wxss */
.ocr {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  background-color: #333;
}

.ocr .canvas {
  flex: 1;
  width: 100%;
}

.ocr .buttons {
  display: flex;
  width: 100%;
  height: 100rpx;
  color: white;
  line-height: 100rpx;
  background-color: black;
  justify-content: space-around;
}

.button {
  flex: 1;
  text-align: center;
}
.button:active {
   background-color: #111;
}
