/* pages/plate/bind/bind.wxss */

.input-block {
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 94%;
  height: 90rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 900rpx;
  /* letter-spacing: 1rpx; */
  margin: 20rpx auto;
  color: #000;
  background-color: #fff;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.label {
  color: black;
  white-space: nowrap;
}

.input-border-bottom {
  border-bottom: 1rpx solid #eee;
}

.input-border-bottom-focus {
  /* border-bottom: 1rpx solid #0e8ee7; */
  border-bottom: 1rpx solid green;
}

.placeholder {
  color: #cdd0d5;
  white-space: nowrap;
}

.keyboard-wrap {
  z-index: 9999;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  /*background: #fff;*//*border-bottom: 20rpx solid #fff;*//*border-top: 20rpx solid #fff;*/
}

.keyboard-mask {
  /*position: absolute;*/
  bottom: 0;
  left: 0;
  width: 100%;
  height: auto;
  flex-grow: 1;
  background: transparent;
}

.keyboard-view {
  /*position: relative;*/
  bottom: 0;
  left: 0;
  width: 100%;
  height: auto;
}

.imb {
  position: fixed;
  height: 100vh;
  left: 100%;
  top: 0;
  width: 100%;
}

.b64 {
  color: #cdd0d5;
  text-align: center;
  border-top: 1px solid #cdd0d5;
  border-bottom: 1px solid #cdd0d5;
  margin: 80rpx 0 0 0;
}

.base64 {
  overflow: scroll;
  max-height: 500rpx;
  word-wrap: break-word;
}
